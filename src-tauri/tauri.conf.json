{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "heycat",
  "version": "0.1.0",
  "identifier": "com.heycat.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "heycat",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "splash",
        "title": "HeyCat",
        "width": 300,
        "height": 250,
        "center": true,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "url": "splash.html"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; media-src 'self' asset: https://asset.localhost; connect-src 'self' https://huggingface.co",
      "freezePrototype": true,
      "assetProtocol": {
        "enable": true,
        "scope": ["$DATA/heycat/**", "$DATA/heycat-*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
