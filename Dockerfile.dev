# Development container for heycat
# Provides: TypeScript (Bun), Rust (stable + nightly), Git, SSH, rsync, GitHub CLI
#
# This container handles:
# - Frontend TypeScript development (Bun)
# - Rust backend development and tests (non-macOS specific)
# - Linting and formatting
# - Claude Code / agile workflow
#
# macOS-specific builds (Tauri/Swift) must be done on host via mac-build script

FROM debian:bookworm-slim AS base

# Use bash for pipefail support in RUN commands
SHELL ["/bin/bash", "-o", "pipefail", "-c"]

# Avoid prompts during apt-get
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Build essentials
    build-essential \
    pkg-config \
    # Git and version control
    git \
    git-lfs \
    # SSH for git operations and mac-build sync
    openssh-client \
    # rsync for syncing to mac host
    rsync \
    # Utilities
    curl \
    wget \
    ca-certificates \
    unzip \
    jq \
    # Required for some Rust crates
    libssl-dev \
    # Cleanup
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
    && chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt-get update \
    && apt-get install -y gh \
    && rm -rf /var/lib/apt/lists/*

# Install Bun
ENV BUN_INSTALL=/usr/local
RUN curl -fsSL https://bun.sh/install | bash

# Install Rust (both stable and nightly)
ENV RUSTUP_HOME=/usr/local/rustup
ENV CARGO_HOME=/usr/local/cargo
ENV PATH=/usr/local/cargo/bin:$PATH

RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --default-toolchain stable \
    && rustup toolchain install nightly \
    && rustup component add rustfmt clippy \
    && rustup component add rustfmt clippy --toolchain nightly \
    # Install cargo-llvm-cov for coverage (nightly only)
    && rustup +nightly component add llvm-tools-preview \
    && cargo install cargo-llvm-cov

# Create non-root user for development
ARG USER_ID=1000
ARG GROUP_ID=1000

RUN groupadd -g ${GROUP_ID} dev \
    && useradd -l -u ${USER_ID} -g dev -m -s /bin/bash dev

# Create workspace directory
WORKDIR /workspace

# Set ownership
RUN chown -R dev:dev /workspace

# Switch to non-root user
USER dev

# Configure git for the dev user
RUN git config --global init.defaultBranch main \
    && git config --global core.autocrlf input

# Environment variables for heycat development
ENV HEYCAT_DOCKER_DEV=1
ENV HEYCAT_DEV_ID=""
ENV HEYCAT_MAC_HOST=""
ENV HEYCAT_MAC_USER=""
ENV HEYCAT_MAC_PATH=""

# Default command - start shell
CMD ["/bin/bash"]
